<% provide(:title, @user.display_name) %>
<div class="row">
  <aside class="span7">
    <section>
      <section>
        <h1>
        <%= gravatar_for @user %>
        <%= @user.display_name %>
      </h1>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
      	<%= render 'shared/house' %>
      </section>
    </section>
  </aside>
  <div class="span5">
    <% if @user.own_stories.any? %>
      <h3>Stories (<%= @user.own_stories.count %>)</h3>
      <ol class="stories">
        <%= render @stories %>
      </ol>
      <%= will_paginate @stories %>
    <% end %>
  </div>
</div>
