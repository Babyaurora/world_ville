<% provide(:title, @user.display_name) %>
<div class="row">
  <aside class="span7">
    <section class="row">
      <section class="span4">
        <h1>
        <%= gravatar_for @user %>
        <%= @user.display_name %>
      </h1>
      </section>
      <section class="span3">
        <%= render 'shared/stats' %>
      </section>
    </section>
    <section>
	  	<%= render 'shared/house' %>
	  </section>
	  <section>
	  	<h3>Things Around Her</h3>
	  	<%= image_tag("world2.jpg", class: "small_image well") %>
	  </section>
  </aside>
  <div class="span5">
    <% if @user.own_stories.any? %>
    <section>
    	<h3>Bio</h3>
    	<ol class="stories">
    	<%= render @stories.last %>
    	</ol>
    </section>
    <section>
      <h3>Stories</h3>
      <ol class="stories">
        <%= render @stories.limit(3) %>
      </ol>
      <%= will_paginate @stories %>
      </section>
      <section>
      	<h3>Founder of</h3>
      	<section class="row">
      		<div class="span2">
      			<%= image_tag("house1.jpg", class: "wide_image") %>
      		</div>
      		<div class="span2">
      			<%= image_tag("house2.jpg", class: "wide_image") %>
      		</div>
      	</section>
      	<section>
      	<h3>Mayor of</h3>
      	<section class="row">
      		<div class="span2">
      			<%= image_tag("house3.jpg", class: "wide_image") %>
      		</div>
      	</section>
      </section>
    <% end %>
  </div>
</div>
