<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/story_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Story Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>
	<div class="center hero-unit">
	  <h1>Welcome to the Worldville</h1>
	
	  <h2>
	    This is the home page for the Worldville
	  </h2>
	
	  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
	</div>
<% end %> 

