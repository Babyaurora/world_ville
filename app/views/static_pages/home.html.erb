<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/story_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Story Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>
	<div class="center">
	  <h1>Want to meet friends and discover around the world</h1>
	  <%= render 'shared/search_earth' %>
	  <%= link_to "Join WorldVille!", signup_path, class: "btn btn-large btn-primary" %>
	</div>
<% end %> 

