<% if @story.errors.any? %>
  $("#flash_notice").hide(300);
  $("li #story_errors").html("<%= escape_javascript(render 'shared/error_messages', object: @story) %>");
  $("li #story_errors").show(300);
<% else %>
  $("li #story_errors").hide(300);
  $("#flash_notice").html("<%= escape_javascript(render 'shared/flash_notice') %>");
  $("#flash_notice").show(300);
  $(":input:not(input[type=submit])").val("");
  $("#<%= @story.id %>").html("<%= escape_javascript( render 'stories/story_display', story: @story) %>");
<% end %>