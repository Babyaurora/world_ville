<!DOCTYPE html>
<html>
	<head>
		<title>WorldVille | <%= yield(:title) %></title>
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
		<%= render 'layouts/shim' %>
	</head>
	<body>
		<%= render 'layouts/header' %>
		<div class="container">
			<div id="flash_notice">
				<%= render 'shared/flash_notice' %>
			</div>
			<%= yield %>
			<%= render 'layouts/footer' %>
			<%= debug(params) if Rails.env.development? %>
		</div>
		<%= render 'layouts/floater' %>
		<%= yield :scripts %>
	</body>
</html>
